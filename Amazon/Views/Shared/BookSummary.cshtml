@model Book

            <!--Float left allows them to stack side by side into a total of 3 columns-->
<div class="col-4 float-left text-center" style="border:groove; position: center; background-color:antiquewhite">
    <h5>@Model.Title</h5>
    <div>
        <!-- displays price in a badge pill-->
        <span class="badge badge-pill badge-light m-1 p-2" style="float:right">
            Only $@Model.Price
        </span>
    </div>
    <p>Book ID: @Model.BookID</p>
    <p>Author: @Model.Author</p>
    <p>Publisher: @Model.Publisher</p>
    <p>ISBN: @Model.ISBN</p>
    <p>Category: @Model.ClassificationCategory</p>
    <p>Page Length: @Model.PageLength</p>
</div>